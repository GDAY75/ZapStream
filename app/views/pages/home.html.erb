<% if @movie.present? %>
  <h1><%= @movie_title %></h1>
  <%= image_tag @movie_poster_url %>
  <p><%= @movie_summary %></p>
  <p><%= @movie_release_date %></p>

  <% if @movie_length >= 60 %>
    <p>
      <%= @hours %> h
      <%= @min < 10 ? "0#{@min}" : @min %>
    </p>
  <% else %>
    <p><%= @min %> min</p>
  <% end %>
<% end %>
