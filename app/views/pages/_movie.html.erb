<% if movie.present? %>
  <div>
    <%= link_to movie_path(movie["id"]) do %>
      <% if movie_poster_url.present? %>
        <%= image_tag movie_poster_url, class:"media-poster" %>
      <% else %>
        <%= image_tag "default_media_poster.jpg", class:"media-poster" %>
      <% end %>
    <% end %>
  </div>

  <div class="media-details">
    <h2><%= movie_title %></h2>
    <%= render "shared/providers", providers: movie_providers %>
    <div>
      <% if movie_length >= 60 %>
        <p class="text-grey">
          <%= hours %> h
          <%= min < 10 ? "0#{min}" : min %>
        </p>
      <% else %>
        <p class="text-grey"><%= min %> min</p>
      <% end %>
    </div>

    <div class="summary-box">
      <p class="media-summary"><%= movie_summary %></p>
    </div>
  </div>
<% end %>
